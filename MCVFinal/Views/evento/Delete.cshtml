@model MCVFinal.evento

@{
    ViewBag.Title = "Delete";
}

<h2>Elminar</h2>

<h3>Esta seguro que desea eliminar el evento?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del evento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Organizador
        </dt>

        <dd>
            @Html.DisplayFor(model => model.organizador)
        </dd>

        <dt>
            Nombre del salon
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salon.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Retornar", null, null, null, new { href = Request.UrlReferrer })
        </div>
    }
</div>
