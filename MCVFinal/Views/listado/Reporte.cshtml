@model MCVFinal.listado

@{
    ViewBag.Title = "Reporte";
}

<h3>Seleccione un evento para el cual desea generar el reporte</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Nombre del evento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("evento_id_evento", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.evento_id_evento, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            <input type="submit" value="Generar Reporte" class="btn btn-default" />
        </div>
    </div>
}
<div>
    @*@Html.ActionLink("LinkName", "ActionName", "ControllerName", new { @id = idValue, @secondParam = = 2 }, null)*@
    @Html.ActionLink("Regresar", null, null, null, new { href = Request.UrlReferrer })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
